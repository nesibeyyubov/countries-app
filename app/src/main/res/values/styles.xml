<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="continent_bg">
        <item name="android:clickable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:elevation">12dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="toolbarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="mapSettingBtnStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/map_setttings_item_bg</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>